<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragments_details"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".DetailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:paddingBottom="32dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_ship_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_ship_typ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/details_image"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textView356"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:text="Home port"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_home_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:text="TextView"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:text="Missons"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_missions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:text="TextView"
                />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:text="Year"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:text="year"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:text="weight"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="6dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:text="@string/ship_model"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_ship_model"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_marginTop="4dp"
                android:paddingStart="6dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:text="Active"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/details_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingBottom="70dp"
                android:textAlignment="textStart" />
            <TextView
                android:id="@+id/textView267"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:text="imo"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/details_imo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingBottom="70dp"
                android:textAlignment="textStart" />
            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:text="mmsi"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/details_mmsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingBottom="70dp"
                android:textAlignment="textStart" />
            <TextView
                android:id="@+id/textView278"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:text="abs"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/details_abs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingBottom="70dp"
                android:textAlignment="textStart" />
            <TextView
                android:id="@+id/textView2256"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:text="class"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/details_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingBottom="70dp"
                android:textAlignment="textStart" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>